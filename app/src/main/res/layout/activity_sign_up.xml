<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:orientation="vertical">

    <!-- Salt Shaker -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="65dp"
        android:text="Salt Shaker"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="italic" />

    <!-- Salt shaker에 오신 것을 환영합니다! -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="10dp"
        android:text="Salt shaker에 오신 것을 환영합니다!"
        android:textColor="#434A53"
        android:textSize="15sp" />

    <!-- 이메일 -->
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="이메일" />

    <!-- 이메일 입력 -->
    <EditText
        android:id="@+id/sign_up_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_up2"
        android:gravity="center"
        android:hint=" 이메일을 입력해주세요 🙂"
        android:inputType="text"
        android:textSize="15dp"/>


    <!--비밀번호 -->
    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="비밀번호" />

    <!-- 비밀번호 입력 -->
    <EditText
        android:id="@+id/sign_up_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_up3"
        android:gravity="center"
        android:hint="  6자 이상 입력해주세요 🙂  "
        android:inputType="textPassword"
        android:textSize="15dp" />

    <!--비밀번호 확인 -->
    <TextView
        android:id="@+id/passwordcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="비밀번호 확인" />

    <!-- 비밀번호 확인 입력 -->
    <EditText
        android:id="@+id/sign_up_pwdcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_up3"
        android:gravity="center"
        android:hint="비밀번호을 입력해주세요 🙂"
        android:inputType="textPassword"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="개인정보 수집 전 개인정보 수집에 대하여 동의합니다."/>

    <Button
        android:id="@+id/look"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_gravity="center"
        android:background="#73D1D5EA"
        android:text="개인정보처리방침 보기" />

    <!-- Sign Up -->

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="6dp"
        android:background="#739197B5"
        android:enabled="false"
        android:text="회원가입"
        android:textColor="#000000" />

</LinearLayout>